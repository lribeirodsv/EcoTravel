<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    >

    <ImageView
        android:id="@+id/imagePlace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/default_background" />

    <TextView
        android:id="@+id/nomePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagePlace"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imagePlace"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Nome" />

    <TextView
        android:id="@+id/descPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/nomePlace"
        android:layout_below="@+id/nomePlace"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="Descricao"
        android:ellipsize="end"
        android:lines="4"/>
</RelativeLayout>